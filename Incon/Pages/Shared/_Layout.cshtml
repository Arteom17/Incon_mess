<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Incon.styles.css" asp-append-version="true" />
</head>
@using Incon.Pages;
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                        @Html.Raw(@ViewData["Titel"])
                        @if (GlobalSettings.Globalprofile is null && !GlobalSettings.Logcheck)
                        {
                <a class="navbar-brand" asp-area="" asp-page="/Index">Inconnect</a>
                 <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/RegPages/CreateProfile">Регистрация</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/LoginPages/LoginOnSite">Вход</a>
                            </li>

                        

                    </ul>
                </div>
                        }
                @if (GlobalSettings.Globalprofile is not null)
                {
                    @if (GlobalSettings.Globalaccount is not null)
                    {
                        <a class="navbar-brand" asp-area="" asp-page="/Index">Inconnect</a>
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                                aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                            <ul class="navbar-nav flex-grow-1">
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-page="/ChatsPages/IndexChat">Чаты</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" href="@Url.Page("/RegPages/EditProfile","", new{id = Pages.GlobalSettings.Globalprofile.Profileid})">Настройка профиля</a>
                                </li>
                                    <a class="nav-link text-dark" asp-area="" asp-page="/LoginPages/ChooseAccount">Выбор аккаунта</a>

                                <li class="nav-item">
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" href="@Url.Page("/Index", "", new {count = 10})">Выход</a>
                                </li>
                            </ul>
                        </div>
                    }
                }
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Inconnect
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>