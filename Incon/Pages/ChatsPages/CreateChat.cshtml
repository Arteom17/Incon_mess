@page
@model Incon.Pages.ChatsPages.CreateModel

@{
    ViewData["Title"] = "Создание чата";
}

<h1>Создание</h1>

<h4>Чата</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Chat.Name" class="control-label">Название</label>
                <input asp-for="Chat.Name" class="form-control" />
                <span asp-validation-for="Chat.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="ChatsPages/Indexchat">Обратно к списку чатов</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
