@page
@model Incon.Pages.LoginPage.LoginOnSiteModel

@{
    ViewData["Title"] = "Вход";

}

<h1>Вход</h1>

<h4>В Профиль</h4>

@Html.Raw(Model.BMessage)

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <label asp-for="Profile.Login" class="control-label">Логин</label>
                <input asp-for="Profile.Login" class="form-control" />
                <span asp-validation-for="Profile.Login" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Profile.Passwordhash" class="control-label">Пароль</label>
                <input asp-for="Profile.Passwordhash" class="form-control" />
                <span asp-validation-for="Profile.Passwordhash" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Вход" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="/Index">Назад к стартовой</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
